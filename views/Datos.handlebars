{{> head}}

<body>
  <h1>Skate Park</h1>

  <div class="py-4">
    <h2>Datos del perfil</h2>
    <hr class="w-50" />

    <form id="actualizarForm" action="/actualizar" method="post">
      {{#each usuarioConectado}}
      <div class="form-group row w-50 m-auto">
        <div class="form-group col-12 col-sm-6">
          <label>Email</label>
          <input class="form-control m-auto" readonly value="{{email}}" name="email" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Nombre</label>
          <input class="form-control m-auto" value="{{nombre}}" name="nombre" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Password</label>
          <input type="password" class="form-control m-auto" value="{{password}}" name="password" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Repita la password</label>
          <input id="repassword" type="password" class="form-control m-auto" value="{{password}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>AÃ±os de experiencia</label>
          <input class="form-control m-auto" value="{{anos_experiencia}}" name="anos_experiencia" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Especialidad</label>
          <input class="form-control m-auto" value="{{especialidad}}" name="especialidad" />
        </div>
      </div>
      <button type="submit" id="btnActualizar" class="btn btn-primary mb-1">Actualizar</button>
    {{/each}}
    </form>
    <div>
      <button id="btnEliminar" class="btn btn-danger">Eliminar cuenta</button>
    </div>
  </div>
  {{> datosScript}}
</body>

</html>